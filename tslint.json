{
  "extends": ["tslint:latest", "tslint-config-prettier"],
  "rules": {
    "interface-name": [true, "never-prefix"],
    "no-submodule-imports": [true, "~lib"],
    "no-implicit-dependencies": [true, "dev", ["~lib"]],
    "no-var-keyword": true,
    "no-parameter-reassignment": true,
    "typedef": [true, "call-signature"],
    "no-this": false,
    "no-class": false,
    "no-console": true
  }
}
